page {
  background: #ebebeb;
}
.user-info {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgb(48, 48, 48);
  flex-direction: column;
}
.user-icon {
  width: 150rpx;
  height: 150rpx;
}
.user-icon image {
  width: 100%;
  height: 100%;
  border-radius: 150rpx;
}
.name {
  color: #fff;
  font-size: 32rpx;
  margin-top: 10rpx;
}
.list {
  background: #fff;
  padding: 0 20rpx;
  margin-top: 30rpx;
}
.item:last-child {
  border-bottom: 0rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eaeaea;
  font-size: 28rpx;
  height: 56rpx;
}
.item .icon {
  width: 40rpx;
  height: 40rpx;
}
.item .icon image {
  width: 100%;
  height: 100%;
}
.item .text {
  flex: 1;
  margin-left: 30rpx;
}